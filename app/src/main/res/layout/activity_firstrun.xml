<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstrunActivity"
    android:background="@drawable/wt_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Проверьте штрафы"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="в официальных источниках"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/wt_check_pad"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="3"
        android:background="#fc7100"
        android:text="ВВЕСТИ ДАННЫЕ"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:id="@+id/button1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>